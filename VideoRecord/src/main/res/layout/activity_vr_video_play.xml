<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/v_navi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_vr_back"
        app:tint="#fff"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="@+id/v_navi"
        app:layout_constraintStart_toStartOf="@+id/v_navi"
        app:layout_constraintBottom_toBottomOf="@+id/v_navi"
        />
    <VideoView
        android:id="@+id/vd_play"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/v_navi"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>